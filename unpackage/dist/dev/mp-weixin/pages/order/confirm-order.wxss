.headr_top {
  height: 140rpx;
}
.header {
  width: 100%;
  box-sizing: border-box;
  padding: 35rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  position: relative;
  z-index: 20;
}
.left {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.left .store-name {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 26rpx;
  margin-bottom: 30rpx;
}
.left .store-name .iconfont {
  margin-left: 10rpx;
  line-height: 100%;
}
.left .store-location {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #919293;
  font-size: 24rpx;
}
.left .store-location .iconfont {
  vertical-align: middle;
  display: table-cell;
  color: #f5a654;
  line-height: 100%;
}
.wrap {
  padding: 25rpx;
  padding-bottom: 140rpx;
}
[data-theme=theme0] .wrap {
  background: linear-gradient(180deg, #FFCC00 0, rgba(255, 204, 0, 0.09) 100%) !important;
}
[data-theme=red_theme] .wrap {
  background: linear-gradient(180deg, #e60b30 0, rgba(230, 11, 48, 0.05) 100%) !important;
}
[data-theme=theme1] .wrap {
  background: linear-gradient(180deg, #8f2df3 0, rgba(143, 45, 243, 0.05) 100%) !important;
}
[data-theme=theme2] .wrap {
  background: linear-gradient(180deg, #33a7ff 0, rgba(51, 167, 255, 0.05) 100%) !important;
}
[data-theme=theme3] .wrap {
  background: linear-gradient(180deg, #1fc551 0, rgba(31, 197, 81, 0.05) 100%) !important;
}
[data-theme=theme4] .wrap {
  background: linear-gradient(180deg, #ff7f00 0, rgba(255, 127, 0, 0.05) 100%) !important;
}
[data-theme=theme5] .wrap {
  background: linear-gradient(180deg, #caa45a 0, rgba(202, 164, 90, 0.05) 100%) !important;
}
